
@if (signInManager.IsSignedIn(User))
{
	<partial name="/Views/Partials/_AccountHeader.cshtml" />
	<div class="container d-grid justify-content-center text-center">
		<h1>Welcome to your account, @(User.FindFirst("DisplayName")?.Value)!</h1>
		<p class="mt-4 mb-0 font-roboto">What do you wanna do?</p>
		
		<partial name="/Views/Partials/_ProductHeader.cshtml" />
		
		@if (User.IsInRole("admin"))
		{
			<div class="d-flex justify-content-center mt-3">
				<a class="btn-white me-3" asp-controller="admin" asp-action="index">ADMIN PAGE</a>
			</div>
		}
	</div>
}
else
{
	<div class="container d-grid text-center mt-5 mb-3">
		<h1>You are not logged in right now!</h1>
	</div>
}

