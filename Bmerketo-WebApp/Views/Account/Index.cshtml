
@if (signInManager.IsSignedIn(User))
{
	<div class="container d-grid justify-content-center text-center mt-5 mb-3">
		<h1>Welcome to your account, @User.Identity?.Name!</h1>
		<p class="mt-4 mb-0">What do you wanna do?</p>
		<partial name="/Views/Partials/_ProductHeader.cshtml" />
		<div class="d-flex justify-content-center mt-5">
			<a asp-action="logout" asp-controller="account" class="btn-theme">LOGOUT</a>
		</div>
	</div>
}
else
{
	<div class="container d-grid text-center mt-5 mb-3">
		<h1>You are not logged in right now!</h1>
		<p class="mt-4 mb-0">Redirect?</p>@*		<partial name="/Views/Partials/_ProductHeader.cshtml" />	*@	
</div>
}

