@model ShowcaseModel

<!-- showcase start -->
<section class="showcase">
    <div class="container">
        <div class="content">
            <div class="ingress">HARD CODED</div>
            <div class="title">Hard coded</div>
            <a class="btn-theme" asp-controller="products" asp-action="Index">SHOP NOW</a>
        </div>
        <div class="content-image">
            <img src="./images/chair.jpg" alt="golden chair">
        </div>
    </div>
</section>
<!-- showcase end -->

<!-- showcase dynamic start -->
<section class="showcase">
    <div class="container">
        <div class="content">
            <div class="ingress">@Model?.Ingress</div>
            <div class="title">@Model?.Title</div>

            @if (!string.IsNullOrEmpty(Model?.Button?.Url) && !string.IsNullOrEmpty(Model?.Button?.Content))
            {
                <a class="btn-theme" href="@Model?.Button?.Url">@Model?.Button?.Content</a>
            }

        </div>
        <div class="content-image">
            <img src="@Model?.ImageUrl" alt="@Model?.Title">
        </div>
    </div>
</section>
<!-- showcase dynamic end -->