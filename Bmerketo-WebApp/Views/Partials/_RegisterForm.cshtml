@model AccountRegisterViewModel

<!-- register-form start -->
<section class="register-form">
    <div class="container">
        <div class="form-content">
            <div class="form-title">Please Register Your new Account</div>
            <hr>
            <form method="post" onsubmit="validateAll(event)" novalidate>

                <div class="line">
                    <div asp-validation-summary="ModelOnly" class="error-text"></div>
                </div>

                <div class="line grid">
                    <div class="column">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" onkeyup="validateFirstNameSwitch(event)" id="first-name-input" required />
                        <span asp-validation-for="FirstName" id="first-name-span" class="error-text"></span>
                        <div id="first-name-error" class="error-text"></div>
                    </div>

                    <div class="column">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" onkeyup="validateLastNameSwitch(event)" id="last-name-input" required />
                        <span asp-validation-for="LastName" id="last-name-span" class="error-text"></span>
                        <div id="last-name-error" class="error-text"></div>
                    </div>
                </div>

                <div class="line">
                    <label asp-for="StreetName"></label>
                    <input asp-for="StreetName" onkeyup="validateStreetNameSwitch(event)" id="street-name-input" required />
                    <span asp-validation-for="StreetName" id="street-name-span" class="error-text"></span>
                    <div id="street-name-error" class="error-text"></div>
                </div>

                <div class="line grid">
                    <div class="column">
                        <label asp-for="PostalCode"></label>
                        <input asp-for="PostalCode" onkeyup="validatePostalCodeSwitch(event)" id="postal-code-input" required />
                        <span asp-validation-for="PostalCode" id="postal-code-span" class="error-text"></span>
                        <div id="postal-code-error" class="error-text"></div>
                    </div>
                    <div class="column">
                        <label asp-for="City"></label>
                        <input asp-for="City" onkeyup="validateCitySwitch(event)" id="city-input" required />
                        <span asp-validation-for="City" id="city-span" class="error-text"></span>
                        <div id="city-error" class="error-text"></div>
                    </div>
                </div>

                <div class="line grid">
                    <div class="column">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="error-text"></span>
                    </div>
                    <div class="column">
                        <label asp-for="CompanyName"></label>
                        <input asp-for="CompanyName" />
                        <span asp-validation-for="CompanyName" class="error-text"></span>
                    </div>
                </div>

                <div class="line">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" onkeyup="validateEmailSwitch(event)" id="email-input" required />
                    <span asp-validation-for="Email" id="email-span" class="error-text"></span>
                    <div id="email-error" class="error-text"></div>
                </div>

                <div class="line">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" onkeyup="validatePasswordSwitch(event)" id="password-input" required />
                    <span asp-validation-for="Password" id="password-span" class="error-text"></span>
                    <div id="password-error" class="error-text"></div>
                </div>

                <div class="line">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" onkeyup="validateConfirmPasswordSwitch(event)" id="confirm-password-input" required />
                    <span asp-validation-for="ConfirmPassword" id="confirm-password-span" class="error-text"></span>
                    <div id="confirm-password-error" class="error-text"></div>
                </div>

                @* DONT HAVE FUNCTIONALITY YET!
                <div class="line">
                    <label asp-for="ProfileImage"></label>
                    <input asp-for="ProfileImage" />
                    <input asp-for="ProfileImage" type="file" accept="image/*" />
                 <span asp-validation-for="ProfileImage" class="error-text"></span>
                </div>

                <label class="custom-checkbox">
                    I have read and accepts the terms and agreements
                    <input asp-for="AcceptsTerms" type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                    <span asp-validation-for="AcceptsTerms" class="error-text"></span>
                </label>*@

@*                <button class="btn-theme" onclick="test(event)">Test</button>
*@                <button class="btn-theme" type="submit">Submit</button>
                <div id="form-error" class="error-text mt-2"></div>

            </form>
        </div>
    </div>
</section>
<!-- register-form end -->