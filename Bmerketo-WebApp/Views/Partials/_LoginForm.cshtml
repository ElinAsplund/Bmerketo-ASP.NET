@model AccountLoginViewModel

<!-- login-form start -->
<section class="login-form">
    <div class="container">
        <div class="form-content">
            <div class="form-title">Please Login to Your Account</div>
            <hr>
            <form method="post" novalidate>

                <div class="line">
                    <div asp-validation-summary="ModelOnly" class="error-text"></div>
                </div>

                <div class="line">
                    <div class="email-content">
                        <label asp-for="Email"></label>
                        <a asp-controller="account" asp-action="register">Don't have an Account yet?</a>
                    </div>
                    <input asp-for="Email" required />
                    <span asp-validation-for="Email" class="error-text"></span>
                </div>

                <div class="line">
                    <div class="password-content">
                        <label asp-for="Password"></label>
                        <a href="#">Forgot Your Password?</a>
                    </div>
                    <input asp-for="Password" required />
                    <span asp-validation-for="Password" class="error-text"></span>
                </div>

                <label class="custom-checkbox">
                    Please keep me logged in
                    <input asp-for="KeepLoggedIn" type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>

                <button class="btn-theme" type="submit">Submit</button>
            </form>
        </div>
    </div>
</section>
<!-- login-form end -->
