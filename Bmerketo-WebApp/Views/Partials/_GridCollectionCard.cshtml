@model GridCollectionCardViewModel

<div class="col">
    <div class="card">
        <div class="img-holder">
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title">
        </div>
        <div class="card-body">
            <div>
                <a class="card-link" asp-controller="products" asp-action="details" asp-route-id="@Model.Id">@Model.Title</a>
                <p class="card-text">$@Model.Price</p>
            </div>
            <a class="card-icon" href="#"><i class="fa-regular fa-cart-plus"></i></a>
        </div>
    </div>
</div>